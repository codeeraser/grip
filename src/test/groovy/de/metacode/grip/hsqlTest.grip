info "creating a hsql table"

hsql.execute """drop table atable if exists;
                  create table atable (
                      name varchar(50),
                      address varchar(100)
                  )"""

warn "inserting stuff into table"

hsql.execute "insert into atable(name, address) values('dave', 'some address')"
hsql.execute "insert into atable(name, address) values('joe', 'another address')"
hsql.execute "insert into atable(name, address) values('fred', 'yet another address')"


debug "printing out table content"

hsql.rows("select * from atable").each { row ->
    println("atable [ ${row.name}, ${row.address} ]")
}

schedule "HsqlTest", "0/10 * * * * ?"

init {
    println "nothing to init"
}